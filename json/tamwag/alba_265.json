        "scopecontent": [
            {
                "id": "aspace_b1faf08cc25456cee57b8803a1ba631d",
                "head": {
                    "value": "Scope and Contents"
                },
                "p": [
                    {
                        "value": "Included in this small collection are a flyer for one of Bernstein's talks on Spain, 48 photographs of Bernstein and his family, an autograph book (1940-41), a Spanish Civil War poster (photocopy, original transferred to ALBA poster collection) a clipping on his campaign for governor, and 5 volumes of his published poetry."
                    }
                ]
            }
