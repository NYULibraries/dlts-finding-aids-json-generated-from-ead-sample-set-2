        "scopecontent": [
            {
                "id": "aspace_1f296d68c4c71c6828b0ae51aadcd531",
                "head": {
                    "value": "Scope and Contents"
                },
                "p": [
                    {
                        "value": "The Aaron Leonard Collection of FOIA Files consists of pdfs of declassified Federal Bureau of Investigation documents requested by Leonard through the Freedom of Information Act (FOIA). Materials include pdfs of FBI reports and memoranda on composer Aaron Copland, actor Howard Da Silva, and Harvey Matusow documenting the subjects' employment, residences, daily activities, travel, and political affiliations, especially any documented or perceived connection to the Communist Party of the United States of America (CPUSA). The files document the federal surveillance of figures in the performing arts during the 1940s and 1950s for evidence of subversive or treasonous actions."
                    }
                ]
            }
