                    "scopecontent": [
                        {
                            "id": "aspace_53fc307d34d8355c3758fb4e86196c08",
                            "head": {
                                "value": "Scope and Content Note"
                            },
                            "p": [
                                {
                                    "value": "Series IV contains Stewart's diaries from the 1930s through the 1980s, correspondence to his mother and sister, friends' non-fiction writings and plays, poetry, and fiction and non-fiction writings.  This series also includes photographs of Stewart's funeral, as well as a photograph album containing 67 black and white photographs with substantive captions depicting town life in North-Central West Virginia in 1947.  Also included in this series are materials related to Stewart's memorial service and letters of condolence sent to Betty Elkin Stewart."
                                }
                            ]
                        }
