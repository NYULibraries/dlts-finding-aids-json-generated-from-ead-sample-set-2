        "scopecontent": [
            {
                "id": "aspace_db3c56de9a50d269a66d9fb969d9d141",
                "head": [
                    {
                        "value": "Scope and Contents"
                    }
                ],
                "p": [
                    {
                        "value": "This collection consists of 8 interviews on 20 cassette tapes conducted by Drucker in 1986-1989. The oral histories of labor and civil rights activist Max Shactman and his associates were later used in Drucker's autobiography of Shachtman. The collection has been digitized, and access CDs are available for researcher use."
                    }
                ]
            }
        ],
        "userestrict": [
