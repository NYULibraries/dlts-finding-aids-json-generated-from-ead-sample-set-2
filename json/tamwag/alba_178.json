        "scopecontent": [
            {
                "id": "aspace_45c7edfcda790f9c83138ce87341e1b8",
                "head": [
                    {
                        "value": "Scope and Contents"
                    }
                ],
                "p": [
                    {
                        "value": "This small collection contains the following: Kusman's FOIA file (requested by Peter Carroll, president of ALBA in 2003); a contract on behalf of the United American Spanish Aid Committee signed by Edward Barsky engaging a passenger ship for the sum of $90,000 to transport Spanish refugees to Mexico; a remembrance of Kusman by Moe Fishman, a fellow veteran of the Abraham Lincoln Brigade; and a certificate of appreciation from the Republican government of Spain for his services to the cause of the Spanish government."
                    }
                ]
            }
        ],
