        "custodhist": [
            {
                "id": "aspace_91e74702be39d5bb6bbe5cb96a06813e",
                "head": [
                    {
                        "value": "Custodial History"
                    }
                ],
                "p": [
                    {
                        "value": "The collection was donated to the Tamiment Library circa 1992 by Roberta Bobba, half-sister of Peter Martin.  Most, if not all, of these materials came to Roberta Bobba, as heir of Peter Martin's widow, Madeline Violette Martin, who died in December 1991. Also included are a greeting card and two postcards donated by Dorothy Blumberg. Additional materials related to Peter Martin were found in Tamiment's collections in 2014. The accession number associated with this collection are 1992.012 and 2014.043."
                    }
                ]
            }
        ],
        "did": [
            {
                "physdesc": [
