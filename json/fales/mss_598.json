        "scopecontent": [
            {
                "id": "aspace_f63559dd2cf8c446f99f7b7f24278ffc",
                "head": [
                    {
                        "value": "Scope and Contents"
                    }
                ],
                "p": [
                    {
                        "value": "The Kiyoshi Koyama Papers date from 1967 to 2000 and contain notes and audio recordings of interviews conducted by  Koyama with 20th century jazz musicians, presumably about the topic of jazz music. Interviewees include Sonny Rollins, the Marsalis Brothers, Miles Davis, Chick Corea, Ornette Coleman, Albert Ayler, Yamashita Yosuke, and Gil Evans. Research, including notes and audio recordings, on Mercury Records reissues and monthly calendars are also included. Notes are primarily in Japanese with limited English throughout."
                    }
                ]
            }
        ],
        "separatedmaterial": [
            {
                "id": "aspace_a8765403bc1dd86e339efa1673f7e126",
                "head": [
                    {
                        "value": "Separated Materials"
                    }
                ],
                "p": [
                    {
                        "value": "Books, periodicals, and commercial recordings (including LPs and CDs) from Koyama's personal collection are held by the Avery Fisher Center for Music and Media."
                    }
                ]
            }
        ],
